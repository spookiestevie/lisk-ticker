{
  "manifest_version": 2,
  "name": "Rise Ticker",
  "description": "A simple Chrome Extension showing current Rise price.",
  "version": "0.7",
  "browser_action": {
    "default_icon": "icons/rise_icon_128.png",
    "default_popup": "popup.html"
  },
  "content_security_policy": "script-src 'self' https://example.com; object-src 'self'",
  "icons": {
      "16": "icons/rise_icon_16.png",
      "32": "icons/rise_icon_32.png",
      "64": "icons/rise_icon_64.png",
      "128": "icons/rise_icon_128.png"
  },
  "background": {
    "scripts": ["js/background.js"]
  },
  "permissions": [
    "activeTab",
    "https://www.google-analytics.com/",
    "storage"
  ]
}
